{
  "name": "open-claude-cowork",
  "version": "1.0.0",
  "main": "./release/dist/main/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development plop",
    "dev:render": "rsbuild dev --config ./builder/rsbuild.render.ts",
    "dev:main": "nodemon",
    "build": "cross-env NODE_ENV=production plop",
    "rebuild:main": "npm run build:main && electron ./release/dist/main/index.js",
    "build:main": "rsbuild build --config ./builder/rsbuild.main.ts",
    "build:render": "rsbuild build --config ./builder/rsbuild.render.ts",
    "postinstall": "electron-builder install-app-deps && node scripts/download-node.js",
    "icon": "electron-icon-builder -i=./public/assets/icons/icon.png -o=./public/assets/icons -f",
    "lint": "pnpm biome check --write ./src"
  },
  "lint-staged": {
    "./src/**/*.{ts,tsx,js,json,html,yml,css,less,scss,md}": [
      "pnpm run lint"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@rsbuild/core": "^1.6.14",
    "@rsbuild/plugin-babel": "^1.0.6",
    "@rsbuild/plugin-react": "^1.4.2",
    "@types/node": "^25.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "babel-plugin-react-compiler": "^1.0.0",
    "cross-env": "^10.1.0",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "electron": "^39.2.6",
    "electron-builder": "^26.3.5",
    "electron-icon-builder": "^2.0.1",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "plop": "^4.0.4",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "rslog": "^1.3.2",
    "tsx": "^4.21.0"
  },
  "dependencies": {
    "@agentclientprotocol/sdk": "^0.13.0",
    "better-sqlite3": "^12.6.2",
    "lucide-react": "^0.562.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "zod": "^4.3.5"
  }
}
